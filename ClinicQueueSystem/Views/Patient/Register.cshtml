@model ClinicQueueSystem.Models.Patient

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Register Patient</h2>
                <form asp-action="Register" method="post">
                    <div class="form-group mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input asp-for="Name" id="name" class="form-control" placeholder="Enter patient name" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input asp-for="Age" id="age" type="number" class="form-control" placeholder="Enter patient age" required />
                    </div>
                    <div class="form-group form-check mb-3">
                        <input asp-for="IsEmergency" id="isEmergency" type="checkbox" class="form-check-input" />
                        <label for="isEmergency" class="form-check-label">Emergency Case</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
