@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>📊 Admin Dashboard</h2>

<table class="table table-bordered">
    <tr>
        <th>📅 Patients Served Today</th>
        <td>@ViewBag.ServedToday</td>
    </tr>
    <tr>
        <th>🚨 Emergency Cases Today</th>
        <td>@ViewBag.EmergencyCount</td>
    </tr>
    <tr>
        <th>🕒 Average Wait Time (mins)</th>
        <td>@ViewBag.AvgWaitTime</td>
    </tr>
    <tr>
        <th>⏰ Peak Hour</th>
        <td>@ViewBag.PeakHour:00</td>
    </tr>
</table>

<p>
    <a asp-action="PatientsServedToday" class="btn btn-primary">View Patients Served Today</a>
</p>
